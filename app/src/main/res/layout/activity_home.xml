<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.Home"
    android:background="@color/white"
    android:paddingTop="20dp">
    <include layout="@layout/top_bar_layout" android:id="@+id/top_bar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="10dp"
        android:layout_below="@id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_menu"/>
            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:foreground="@drawable/bg_item_menu"
                android:id="@+id/bt_table"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/tv_table"
                    android:textColor="@color/bg_splash"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16dp"
                    android:text="@string/press_here_to_enter_tonight_s_prize_draw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>