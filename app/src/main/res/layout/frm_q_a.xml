<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FrmQA"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="24dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q_amp_a"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_semibold"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="5dp"
            android:background="@drawable/search_edt_drawble_bg"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginHorizontal="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_search"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:imeOptions="actionSearch"
                android:id="@+id/et_search"
                android:inputType="text"
                android:paddingTop="2dp"
                android:background="@android:color/transparent"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:hint="@string/search"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/gray_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_ques"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:visibility="gone"
            android:id="@+id/et_mess"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_mb_chat"
            android:padding="20dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:inputType="textMultiLine"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:hint="@string/members_chat_service"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/gray_1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_submit"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="235dp"
            android:layout_height="64dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_button"
            android:text="@string/submit_str" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>