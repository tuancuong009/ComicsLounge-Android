<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="20dp"
        android:background="@drawable/bg_enter_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp">
        <ImageView
            android:id="@+id/bt_close"
            android:layout_gravity="end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_circle_close"
            app:tint="@color/bg_splash"/>
        <TextView
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            android:text="@string/dear_guest_please_enter_your_table_number_and_push_okay_to_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_table"
            android:gravity="center"
            android:textColor="@color/black"
            android:inputType="number"
            android:digits="0123456789"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginVertical="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="98dp"
            android:layout_height="55dp"
            android:background="@drawable/bg_item_menu"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_ok"
            android:layout_gravity="center"
            android:layout_width="161dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_button"
            android:text="@string/ok" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>