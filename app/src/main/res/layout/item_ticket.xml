<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="2dp"
            android:layout_toStartOf="@id/ll_show_ticket"
            android:text="Best Of The Comedy Festival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/tv_name"
            android:fontFamily="@font/poppins_semibold"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/ll_show_ticket"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="2dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/bg_splash"
                android:id="@+id/tv_ticket"
                android:fontFamily="@font/poppins_regular"/>
            <ImageView
                android:id="@+id/iv_ticket"
                android:src="@mipmap/ic_ticket"
                android:layout_marginStart="5dp"
                android:layout_width="21dp"
                android:layout_height="21dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toStartOf="@id/ll_meal_ticket"
            android:paddingTop="2dp"
            android:text="27 June 2024 - Thursday 6.30PM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/bg_splash"
            android:id="@+id/tv_date"
            android:fontFamily="@font/poppins_regular"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/ll_meal_ticket"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="2dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/bg_splash"
                android:id="@+id/tv_meal"
                android:fontFamily="@font/poppins_regular"/>
            <ImageView
                android:id="@+id/iv_meal"
                android:src="@mipmap/ic_meal"
                android:layout_marginStart="8dp"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
    <View
        android:layout_marginVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_5"/>
</androidx.appcompat.widget.LinearLayoutCompat>