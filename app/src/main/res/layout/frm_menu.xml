<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FrmMenu"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/dinner_deals"
        android:layout_marginStart="24dp"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <com.google.android.material.tabs.TabLayout
        android:layout_marginTop="15dp"
        android:paddingStart="20dp"
        android:clipToPadding="false"
        android:layout_gravity="bottom"
        android:id="@+id/tab_menu"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        app:tabTextAppearance="@style/tab_menu_text"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorColor="@color/bg_splash"
        app:tabGravity="start"
        app:tabMode="scrollable"
        app:tabTextColor="@color/grey_3"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/bg_splash"
        />
    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:id="@+id/pb_loading"/>
    <View
        android:visibility="gone"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/grey_2"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.appcompat.widget.LinearLayoutCompat>