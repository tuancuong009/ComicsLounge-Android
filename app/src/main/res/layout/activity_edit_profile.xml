<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditProfileActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/maian_layout">

    <include layout="@layout/toolbar"/>

    <ViewSwitcher
        android:id="@+id/view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="17dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/enter_firstname_strr"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/first_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/login_reg_edt_border_btn_radius"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edt_txt_cursor"
                    android:textSize="14dp"
                    android:imeOptions="actionNext"

                    />

                <!-- <androidx.appcompat.widget.AppCompatTextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="16dp"
                     android:fontFamily="@font/roboto"
                     android:text="@string/enter_lastname_strr"
                     android:textColor="@color/black"
                     android:textSize="14dp" />

                 <androidx.appcompat.widget.AppCompatEditText
                     android:id="@+id/last_name_edt"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:layout_marginTop="5dp"
                     android:background="@drawable/login_reg_edt_border_btn_radius"
                     android:cursorVisible="true"
                     android:lines="1"
                     android:maxLines="1"
                     android:paddingLeft="15dp"
                     android:paddingRight="15dp"
                     android:singleLine="true"
                     android:textColor="@color/black"
                     android:textCursorDrawable="@drawable/edt_txt_cursor"
                     android:textSize="15dp"
                     android:imeOptions="actionNext"/>-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/enter_phon_no_str"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/phone_number_edt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/login_reg_edt_border_btn_radius"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edt_txt_cursor"
                    android:textSize="14dp"
                    android:imeOptions="actionNext"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/enter_country_code_str"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/country_code_edt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_reg_edt_border_btn_radius"
                    android:cursorVisible="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edt_txt_cursor"
                    android:textSize="15dp"
                    android:imeOptions="actionDone"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update_btn"
                    style="@style/CalenderButton"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/roboto"
                    android:text="@string/update_profile_str" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <include layout="@layout/progress_view_layout"/>

    </ViewSwitcher>
</LinearLayout>