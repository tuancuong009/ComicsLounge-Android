<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:context=".activity.ConfirmTicketDetailActivity">


    <ViewSwitcher
        android:id="@+id/view_switcher_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/bt_back"
                        android:src="@mipmap/ic_back"
                        android:layout_width="29dp"
                        android:layout_height="29dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/ticket_details"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"

                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/order_id_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/loading_str"
                            android:textColor="@color/login_btn_color"
                            android:textSize="14dp"
                            android:fontFamily="@font/roboto"
                            />

                        <LinearLayout
                            android:id="@+id/download_ticekt"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/download_tic_dra"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/download_tic"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:fontFamily="@font/roboto"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/product_name_perforname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:text="@string/loading_str"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        android:lines="2"
                        android:ellipsize="end"

                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/date_time_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:text="@string/loading_str"
                        android:fontFamily="@font/roboto"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="9dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/total_purchase_ticket_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:text="@string/loading_str"
                        android:fontFamily="@font/roboto"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llShowOnly"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/contact_us_edt_back_color"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_only_new"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/show_only_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    />

                <LinearLayout
                    android:id="@+id/llShowWithMeal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/contact_us_edt_back_color"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_with_meal_qty"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginHorizontal="24dp"
                    android:id="@+id/with_neal_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <include layout="@layout/progress_view_layout"/>
    </ViewSwitcher>
</LinearLayout>