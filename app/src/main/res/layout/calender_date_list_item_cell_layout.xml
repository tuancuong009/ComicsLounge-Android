<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"

    >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_no_str"
            android:layout_width="@dimen/date_no_width"
            android:layout_height="match_parent"
            android:text="@string/loading_str"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_str"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/calender_cell_list_title_txt_size"
                android:textStyle="bold"
                android:lines="2"
                android:ellipsize="end"
                android:layout_weight="1.5"
                android:gravity="center|left"
                android:textColor="@color/black"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_str"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/calender_cell_list_date_txt_size"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:gravity="center|left"

                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>