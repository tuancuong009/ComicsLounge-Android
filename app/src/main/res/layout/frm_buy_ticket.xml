<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FrmBuyTicket"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_tickets"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_semibold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_date"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey_5"/>
        <TextView
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticket_type"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_semibold"/>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_only"
                    android:textAllCaps="true"
                    android:textColor="@color/bg_splash"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppins_regular"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/bt_show_down"
                        android:src="@mipmap/ic_minus"
                        android:layout_width="12dp"
                        android:layout_height="21dp"/>
                    <TextView
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tv_qty_show"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins_regular"/>
                    <ImageView
                        android:id="@+id/bt_show_up"
                        android:src="@mipmap/ic_plus"
                        android:layout_width="14dp"
                        android:layout_height="21dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_with_meal_str"
                    android:textAllCaps="true"
                    android:textColor="@color/bg_splash"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppins_regular"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/bt_meal_down"
                        android:src="@mipmap/ic_minus"
                        android:layout_width="12dp"
                        android:layout_height="21dp"/>
                    <TextView
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tv_qty_meal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins_regular"/>
                    <ImageView
                        android:id="@+id/bt_meal_up"
                        android:src="@mipmap/ic_plus"
                        android:layout_width="14dp"
                        android:layout_height="21dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey_5"/>
        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_only1"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:id="@+id/tv_price_show"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_with_meal"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:id="@+id/tv_price_meal"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_bold"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:id="@+id/tv_price_total"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_bold"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gold_pass_tickets_are_available_for_this_show"
            android:textAllCaps="true"
            android:textColor="@color/bg_splash"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_checkout"
            android:layout_gravity="center"
            android:layout_width="235dp"
            android:layout_height="61dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:layout_marginBottom="35dp"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_button"
            android:text="@string/checkout_str" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>