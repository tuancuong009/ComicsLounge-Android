<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/llMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:focusable="true"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtMembershipTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_str"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="@dimen/booking_his_cell_title_font_size"
            android:lines="1"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtMembershipEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_str"
            android:fontFamily="@font/roboto"
            android:lines="1"
            android:textSize="@dimen/booking_his_cell_date_font_size"
            android:layout_marginTop="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtMembershipStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_str"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/booking_his_cell_date_font_size"
            android:lines="1"
            android:layout_marginTop="@dimen/booking_his_cell_margin_top"
            />


    </LinearLayout>



</LinearLayout>