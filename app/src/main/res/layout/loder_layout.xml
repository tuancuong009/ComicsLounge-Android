<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/loading_dialog_radius"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <androidx.core.widget.ContentLoadingProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:secondaryProgressTint="@color/white"
            android:progressBackgroundTint="@color/white"
            android:theme="@style/ContentLoadingProgress"
            >

        </androidx.core.widget.ContentLoadingProgressBar>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loding_str"
            android:fontFamily="@font/roboto"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
    </LinearLayout>


    <!--<com.rentalmental.loder.CircularProgressWheel
        android:id="@+id/circle_progress_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        wheel:matProg_barColor="@color/splash_bg_color"
        wheel:matProg_progressIndeterminate="true"
        />-->


</LinearLayout>
