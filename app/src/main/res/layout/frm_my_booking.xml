<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <ViewSwitcher
        android:id="@+id/view_switcher_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginHorizontal="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingVertical="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginTop="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/event_title_heading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/free_ticket_str"
                                    android:textColor="@color/black"
                                    android:textSize="16dp"
                                    android:fontFamily="@font/poppins_semibold" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/event_datetime_heading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/free_ticket_str"
                                    android:textColor="@color/bg_splash"
                                    android:textSize="16dp"
                                    android:fontFamily="@font/poppins_semibold" />
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />


                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/grey_5"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:paddingVertical="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/free_ticket_heading"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text="@string/my_membership_tickets"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimary"
                                        />


                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/free_tickeet_icon"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5dp"
                                        android:src="@drawable/ic_question" />

                                </LinearLayout>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/free_ticket_caption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/loading_str"
                                    android:visibility="gone"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14dp" />
                            </LinearLayout>


                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/free_ticekt_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:buttonTint="@color/colorAccent"
                                android:fontFamily="@font/roboto"
                                android:gravity="center"
                                android:scaleX="1.2"
                                android:scaleY="1.20"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginHorizontal="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/ll_print_tick"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_cap_use_print"
                                android:textAllCaps="true"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/use_my_printed_tickets"
                                android:textColor="@color/bg_splash"
                                android:fontFamily="@font/poppins_bold"/>
                            <ImageView
                                android:id="@+id/iv_dropdown"
                                android:layout_marginStart="5dp"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_down_size"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/bg_stroke_grey"
                            android:id="@+id/cv_print_tick"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp">
                            <TextView
                                android:text="0 tickets"
                                android:layout_marginHorizontal="12dp"
                                android:layout_marginVertical="2dp"
                                android:textColor="@color/grey_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_print_tick"
                                android:fontFamily="@font/roboto"/>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/grey_5"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:gravity="center"
                            android:paddingVertical="8dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/wallet_caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:text="@string/loading_str"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/booking_history_font_size" />

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/wallet_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorAccent"
                                android:buttonTint="@color/colorAccent"
                                android:fontFamily="@font/roboto"
                                android:gravity="center"
                                android:scaleX="1.2"
                                android:scaleY="1.20"
                                android:textColor="@color/black" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/show_only_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:textAllCaps="true"
                                android:id="@+id/show_only_cap_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/loading_str"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/show_only_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:text="@string/zero_str"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/with_meal_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:textAllCaps="true"
                                android:id="@+id/with_meal_cap_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/loading_str"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/with_meal_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:text="@string/zero_str"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/sub_total_str"
                                android:textColor="@color/black"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/discount_subtotal_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:text="@string/zero_str"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/poppins_bold"
                                android:text="@string/discount_str"
                                android:textAllCaps="true"
                                android:textColor="@color/login_btn_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="end|center"
                                android:gravity="end|center"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/discount_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/zero_str"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/login_btn_color" />
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="@string/discount_gold_pass"
                                android:textAllCaps="true"
                                android:textColor="@color/login_btn_color" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/dc_gold_pass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/zero_str"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/login_btn_color" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="@string/discount_printed_tickets"
                                android:textAllCaps="true"
                                android:textColor="@color/login_btn_color" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/dc_print_tick"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="0"
                                    android:textColor="@color/login_btn_color" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_dc_tick_cap"
                                android:textAllCaps="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_bold"
                                android:text="@string/discount_tickets"
                                android:textColor="@color/login_btn_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="end|center"
                                android:gravity="end|center"
                                >

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/dc_ticket"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="-$0.00"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/login_btn_color" />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/sub_total_str"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/sub_toatl_tax_txt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:text="@string/zero_str"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:textAllCaps="true"
                                android:id="@+id/gst_title_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/booking_charge"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="end|center"
                                android:gravity="end|center"
                                >

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tax_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/zero_str"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_bold"
                                android:text="@string/total_str"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/grand_total_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_bold"
                                android:text="@string/zero_str"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wallet_balance_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_regular"
                                android:textAllCaps="true"
                                android:text="@string/wallet_balance"
                                android:textColor="@color/colorPrimary" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/free_ticket_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/zero_str"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>

                        <View
                            android:id="@+id/wallet_view_layout"
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/contact_us_edt_back_color"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/wallet_total_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/total_str"
                                android:textColor="@color/black"
                                android:textAllCaps="true" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/free_tic_grand_total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/zero_str"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_read"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/bg_stroke_blue"
                        android:padding="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/please_read"
                            android:fontFamily="@font/poppins_semibold"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_blue"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/read_des"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/gray_1"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/is_checkbox"
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:background="@drawable/cb_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/i_we_agree"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/gray_1"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/check_out_tick"
                        style="@style/CalenderButton"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="@string/process_to_pay" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <include layout="@layout/progress_view_layout" />

    </ViewSwitcher>


</LinearLayout>