<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FrmMyAccount"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_account"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal">
            <com.google.android.material.textfield.TextInputEditText
                android:focusable="false"
                android:id="@+id/edt_name"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/bt_edit"
                android:layout_marginStart="5dp"
                android:src="@mipmap/ic_edit"
                android:layout_width="21dp"
                android:layout_height="21dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginHorizontal="24dp"
            android:id="@+id/member_ship_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="?selectableItemBackground"
            android:orientation="vertical">
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey_5"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/membership_str"
                android:textColor="@color/gray_2"
                android:textSize="12dp" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_mb_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/membership_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/membership_str"
                        android:textColor="@color/black"
                        android:textSize="14dp"/>
<!--                    <ImageView-->
<!--                        android:layout_width="21dp"-->
<!--                        android:layout_height="21dp"-->
<!--                        android:src="@mipmap/ic_right"-->
<!--                        android:layout_alignParentEnd="true"/>-->
                </RelativeLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_expire">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/membership_expire_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading_str"
                        android:visibility="gone"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="14dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginHorizontal="24dp"
            android:id="@+id/rl_update_mb"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toStartOf="@id/ic"
                android:text="@string/update_or_change_my_membership_details"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/ic"
                android:layout_centerVertical="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@mipmap/ic_right"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey_5"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/gray_1"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_marginTop="5dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey_5"/>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_str"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/gray_1"/>
            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/bt_change_pw"
                android:src="@mipmap/ic_right"
                android:layout_width="21dp"
                android:layout_height="21dp"/>
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginStart="24dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/grey_2">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_pw"
                android:text="12345678"
                android:focusable="false"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey_5"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/gray_1"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_marginTop="5dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey_5"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_refer_fr"
            android:layout_gravity="center_horizontal"
            android:text="@string/refer_a_friend"
            android:textColor="@color/bg_splash"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_bt_logout"
            android:layout_width="235dp"
            android:layout_height="61dp"
            android:layout_marginBottom="30dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>