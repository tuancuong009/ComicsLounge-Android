<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="450dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/home_event_layout_width"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/event_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/event_adpter_image_radius"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ac_service_repair" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/shape_shadow_bottom_top"
                    android:layout_marginRight="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/event_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-medium"
                            android:lines="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:shadowColor="@color/text_color"
                            android:shadowDx="0"
                            android:shadowDy="3"
                            android:shadowRadius="10"
                            android:text="@string/loading_str"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:textStyle="normal" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/product_desc_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto"
                            android:lines="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="@dimen/event_list_buttom_padding_desc"
                            android:shadowColor="@color/text_color"
                            android:shadowDx="0"
                            android:shadowDy="3"
                            android:shadowRadius="10"
                            android:text="@string/loading_str"
                            android:textColor="@color/white"
                            android:textSize="@dimen/home_event_des_txt_size"
                            android:textStyle="normal" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/event_date_txt"
                android:layout_width="@dimen/home_event_layout_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/roboto"
                android:maxLines="2"
                android:inputType="textMultiLine"
                android:text="@string/loading_str"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/get_ticket_btn"
                style="@style/CalenderButton"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="@string/get_ticket"
                android:backgroundTint="@color/colorPrimary"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
